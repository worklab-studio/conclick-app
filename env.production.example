# Conclick Production Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=umami
POSTGRES_USER=umami
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# Connection string (auto-constructed in docker-compose, but needed for standalone)
DATABASE_URL=postgresql://umami:CHANGE_THIS_TO_A_STRONG_PASSWORD@db:5432/umami

# =============================================================================
# APP SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
APP_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# =============================================================================
# APP SETTINGS
# =============================================================================
APP_PORT=3000

# Optional: Custom base path (e.g., /analytics)
# BASE_PATH=

# Optional: Custom tracker script name for ad-blocker bypass
# TRACKER_SCRIPT_NAME=custom.js

# =============================================================================
# BILLING (Lemon Squeezy) - Optional
# =============================================================================
# LEMON_SQUEEZY_API_KEY=
# LEMON_SQUEEZY_STORE_ID=
# LEMON_SQUEEZY_WEBHOOK_SECRET=

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
# Enable cloud mode features
# CLOUD_MODE=1

# Force HTTPS redirect
# FORCE_SSL=1
